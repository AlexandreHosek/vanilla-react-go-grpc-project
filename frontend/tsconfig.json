{
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "public/*"
  ],
  "compilerOptions": {
    "target": "es2016",                                 
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
